    "@openzeppelin/contracts": "^4.7.3",
    "@rainbow-me/rainbowkit": "^0.6.1",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "auto-zustand-selectors-hook": "^2.0.0",
    "clsx": "^1.2.1",
    "connectkit": "^0.0.2",
    "ethers": "^5.7.1",
    "immer": "^9.0.15",
    "next": "^12.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.0",
